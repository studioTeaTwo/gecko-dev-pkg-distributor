{
  "manifest_version": 2,
  "name": "Built-in NIP-07",
  "version": "0.0.1",

  "browser_specific_settings": {
    "gecko": {
      "id": "builtin-nip07@teatwo.dev"
    }
  },

  "permissions": ["tabs", "webNavigation", "<all_urls>", "mozillaAddons", "ssi.nostr"],

  "background": {
    "scripts": ["backgrounds.bundle.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "run_at": "document_start",
      "js": ["contents.bundle.js"]
    }
  ],
  "web_accessible_resources": ["inpages.bundle.js"]
}
