{
  "manifest_version": 2,
  "name": "Experiment-API Selfsovereignidentity",
  "version": "0.0.1",

  "browser_specific_settings": {
    "gecko": {
      "id": "experimentapi-ssi@teatwo.dev"
    }
  },

  "permissions": ["tabs", "webNavigation", "<all_urls>", "mozillaAddons"],

  "experiment_apis": {
    "ssi": {
      "schema": "experiment-apis/ssi.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "experiment-apis/ssi.js",
        "paths": [["ssi"], ["ssiInParent"]]
      },
      "child": {
        "scopes": ["addon_child"],
        "script": "experiment-apis/ssiChild.js",
        "paths": [["ssi"]]
      }
    },
    "ssi.nostr": {
      "schema": "experiment-apis/ssi.nostr.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "experiment-apis/ssi.nostr.js",
        "paths": [["ssi", "nostr"]]
      }
    }
  },

  "background": {
    "scripts": ["backgrounds.bundle.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "run_at": "document_start",
      "js": ["contents.bundle.js"]
    }
  ],
  "web_accessible_resources": ["inpages.bundle.js"]
}
